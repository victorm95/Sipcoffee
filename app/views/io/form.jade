mixin generate_form(io,type)
	form(name="formIO", method="POST")
		div.form-group
			label(for="name") Nombre
			input.form-control#name(list="names", name="name", value=io.name, maxlength="20", required, autocomplete="off")
		datalist#names
			each item in io
				option(value=item.name)
		if(type=="in")
			div.form-group
				label(for="cost") Costo
				input.form-control#cost(type="text", name="cost", value=io.cost, required, maxlength="7", pattern="[0-9]{1,7}", title="Ingrese un numero válido", autocomplete="off")
		div.for-group
			label(for="amount") Cantidad
			input.form-control#amount(type="text", name="amount", value=io.amount, required, maxlength="4" pattern="[0-9]{1,4}", title="Ingrese un numero válido", autocomplete="off")
			if(type=="in")
				select.form-control(name="measure")
					option(value="Unidades") Unidades
					option(value="Gramos") Gramos
					option(value="Litros") Litros
					option(value="Kilos") Kilos	
		input(type="hidden", name="type", value=type)			
		input.btn.btn-success#guardar(type="submit", value="Guardar")
		