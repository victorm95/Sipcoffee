extends ../layout

block content
	section.container
		header
			h3 #{plot.name} del #{block.name}

		nav
			a.btn.btn-default(href="/plots/#{plot._id}/job/new/siembra") Registrar Siembra
			a.btn.btn-default(href="/plots/#{plot._id}/job/new/cosecha") Registrar Cosecha

		article
			if jobs
				h4 Historial
					table.table.table-striped
						tr.info
							th Fecha
							th Trabajo
							th Trabajador
							th Detalles

						each job in jobs
							tr
								td= job.date
								td= job.type
								td= employee.name
								td: a.btn.btn-default(href="#"): span.glyphicon.glyphicon-eye-open
						
			else 
				div.well.well-lg
					h4 No hay historial para mostrar.
